# AI Job Finder Environment Variables
# Copy this file to .env.local for development and configure for production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-job-finder

# AI API Keys
OPENAI_API_KEY=sk-...
CLAUDE_API_KEY=sk-ant-...

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://your-domain.vercel.app

# Monitoring (Optional)
SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=sntrys_...

# Agent Configuration (for Python agents)
API_BASE_URL=https://your-domain.vercel.app
ENVIRONMENT=production
AGENT_API_KEY=your-secure-agent-key

# Contact Form Configuration
CONTACT_EMAIL=your-email@example.com